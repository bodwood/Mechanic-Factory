@{
  Layout = "_Layout";
}

@using Factory.Models;

<h1>Mechanics</h1>
@if (Model["mechanics"].Length == 0)
{
  <p>No mechanics yet..</p>
  <p class="enlarge">@Html.ActionLink("Add Mechanic", "Create", "Mechanics")</p>
}
<ul>
  @foreach (Mechanic mechanic in Model["mechanics"])
  {
    <li class="enlarge">@Html.ActionLink(@mechanic.Name, "Details", "Mechanics", new { id = @mechanic.MechanicId})</li>
  }
</ul>

<h1>Machines</h1>
@if (Model["machines"].Length == 0)
{
  <p>No machines yet...</p>
  <p class="enlarge">@Html.ActionLink("Add Machine", "Create", "Machines")</p>
} 
<ul>
  @foreach (Machine machine in Model["machines"])
  {
    <li class="enlarge">@Html.ActionLink(@machine.Name, "Details", "Machines", new { id = @machine.MachineId})</li>
  }
</ul>

<br>
<br>
<br>
<p class="enlarge">@Html.ActionLink("Manage Mechanics", "Index", "Mechanics")</p> 
<p class="enlarge">@Html.ActionLink("Manage Machines", "Index", "Machines")</p>
