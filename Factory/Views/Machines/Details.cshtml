@{
  Layout = "_Layout";
}

<h1>Machine Details</h1>

@model Factory.Models.Machine
@using Factory.Models

<h2>@Html.DisplayFor(model => model.Name)</h2>

@if (@Model.JoinEntities.Count == 0)
{
  <h3>This machine has no mechanics</h3>
}
else
{
  <h4>Current mechanics assigned:</h4>
  <ul>
    @foreach(MechanicMachine join in Model.JoinEntities)
    {
      <li>@join.Mechanic.Name</li>
    }
  </ul>
}


<p class="enlarge">@Html.ActionLink("Edit", "Edit", new { id = Model.MachineId})</p>
<p class="enlarge">@Html.ActionLink("Delete Machine", "Delete", new { id = Model.MachineId})</p>
<p class="enlarge">@Html.ActionLink("Back to Machines", "Index")</p>
<p class="enlarge">@Html.ActionLink("Main Menu", "Index", "Home")</p>