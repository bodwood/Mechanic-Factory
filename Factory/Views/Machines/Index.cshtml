@{
  Layout = "_Layout";
}

<h1>Machines</h1>
@using Factory.Models
@if (@Model.Count == 0)
{
  <h3 class="text-danger">No machines yet..</h3>
}

<ul>
@foreach(Machine machine in Model)
{
  <li class="enlarge">@Html.ActionLink($"{machine.Name}","Details", new { id = machine.MachineId})</li>
}
</ul>

<p class="enlarge">@Html.ActionLink("Add Machine", "Create")</p>
<p class="enlarge">@Html.ActionLink("Main Menu", "Index", "Home")</p>