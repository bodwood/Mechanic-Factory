@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h1>Edit Machine Info Below</h1>

@using (@Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)
  <li>Name: @Html.EditorFor(model => model.Name, new {placeholder = @Html.DisplayFor(model => model.Name)})</li>
   <h3>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })</h3>
  
  <input type="submit" value="Edit" class="btn btn-lg btn-info" style="margin-bottom: 4%;"/>
}

<p class="enlarge">@Html.ActionLink("Back to Machines", "Index")</p>
<p class="enlarge">@Html.ActionLink("Main Menu", "Index", "Home")</p>