@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h1>Enter Machine Info Below</h1>
<h3>Machines can only be added if there is an associated Mechanic</h3>
@using (@Html.BeginForm())
{
  @Html.DisplayFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new {placeholder= "Machine Name"})

  @Html.LabelFor(model => model.Mechanic)
  @Html.DropDownList("MechanicId")
  <input type="Submit" value="Add">
}

<p class="enlarge">@Html.ActionLink("Back to Machines", "Index", "Machines")</p>
<p class="enlarge">@Html.ActionLink("Main Menu", "Index", "Home")</p>