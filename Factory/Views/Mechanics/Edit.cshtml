@{
  Layout = "_Layout";
}

@model Factory.Models.Mechanic

<h1>Edit Mechanic Info Below</h1>
@using (@Html.BeginForm())
{
  @Html.HiddenFor(model => model.MechanicId)
  <li>Name: @Html.EditorFor(model => model.Name, new {placeholder = @Html.DisplayFor(model => model.Name)})</li>
   <p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })</p>
  
  <input type="submit" value="Edit"/>
}

<p class="enlarge">@Html.ActionLink("Back to Mechanics", "Index")</p>
<p class="enlarge">@Html.ActionLink("Main Menu", "Index", "Home")</p>