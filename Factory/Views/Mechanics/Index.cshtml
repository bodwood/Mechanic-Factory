@{
  Layout = "_Layout";
}

<h1>Mechanic Index</h1>

@using Factory.Models
@if (@Model.Count == 0)
{
  <h3 class="text-danger">No mechanics yet..</h3>
} 
else 
{
<ul>
  @foreach(Mechanic mechanic in Model)
  {
    <li class="enlarge">@Html.ActionLink($"{mechanic.Name}", "Details", new { id = mechanic.MechanicId })</li>
  }
</ul>
}
<p class="enlarge">@Html.ActionLink("Add Mechanic", "Create")</p>
<p class="enlarge">@Html.ActionLink("Main Menu", "Index", "Home")</p>