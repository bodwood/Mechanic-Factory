@{
  Layout = "_Layout";
}

<h1>Mechanic Index</h1>

@using Factory.Models
@if (@Model.Count == 0)
{
  <h3>No mechanics yet..</h3>
} 

<ul>
  @foreach(Mechanic mechanic in Model)
  {
    <li>@Html.ActionLink($"{mechanic.Name}", "Details", new { id = mechanic.MechanicId })</li>
  }
</ul>

<p class="enlarge">@Html.ActionLink("Main Menu", "Index", "Home")</p>