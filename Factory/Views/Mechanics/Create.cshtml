@{
  Layout = "_Layout";
}

@model Factory.Models.Mechanic

<h1>Enter Mechanic Info Below</h1>
@using (@Html.BeginForm())
{
  @Html.DisplayFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new {placeholder= "Mechanic Name"})
  <h3>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })</h3> 
  <input type="Submit" value="Add" class="btn btn-lg btn-info" style="margin-bottom: 4%;">
}

<p class="enlarge">@Html.ActionLink("View Mechanics", "Index")</p>
<p class="enlarge">@Html.ActionLink("Main Menu", "Index", "Home")</p>