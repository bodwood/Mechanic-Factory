@{
  Layout = "_Layout";
}

@model Factory.Models.Mechanic

<h1>Add machine to: @Html.DisplayFor(model => model.Name)</h1>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MechanicId)

  @Html.Label("Select Machine")
  @Html.DropDownList("MachineId")
  <br>

  <input type="submit" value="Add" class="btn btn-lg btn-info" style="margin-top: 4%;"/>
}

<p>@Html.ActionLink("Back to Mechanics", "Index")</p>